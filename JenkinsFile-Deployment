pipeline {
    agent any
 
    tools {
        jdk "JDK21"
        maven "maven"  // if using Maven
    }
    environment {
        EC2_HOST = "ubuntu@3.110.95.94"
    }
 
    stages{
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Kritika6789/Boardgame.git'
            }
        }
        stage('Deploy to EKS') {
            steps {
                // Apply Kubernetes manifests stored in repo
               withCredentials([sshUserPrivateKey(credentialsId: 'SSH_KEY', keyFileVariable: 'SSH_KEY')]) {
                    sh """
                    ssh -i \$SSH_KEY -o StrictHostKeyChecking=no \$EC2_HOST '
                      kubectl get nodes
                      sudo rm -rf Boardgame || true
                      git clone https://github.com/Kritika6789/Boardgame.git
                      cd Boardgame
 
                      kubectl apply -f deployment-service.yaml
                    '
                    """
                }
            }
        }
         
}
}
